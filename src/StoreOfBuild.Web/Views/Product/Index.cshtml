@model IEnumerable<StoreOfBuild.Web.ViewsModels.ProductViewModel>;
@{
    ViewData["Title"] = "Products";
}
<div class="row header">
    <div class="col-md-12">
        <h3>Products</h3>
        <a href="/Product/CreateOrEdit" class="btn btn-primary">New</a>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <table class="table table-hover">
            <thead><tr><td>Nome</td><td>Categoria</td><td>Ação</td></tr></thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td><a class="name">@item.Name</a></td>
                        <td><a class="name">@item.CategoryName</a></td>
                        <td><a href="/Product/CreateOrEdit/@item.Id" class="btn">Edit</a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>